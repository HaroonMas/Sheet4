
@{
    ViewBag.Title = "Receipt";
}

    <table border="0">
        <tr>
            <th colspan="2" class="text-center "><h2>StarSubs Receipt</h2></th>
        </tr>
         <tr>
             <td colspan="2" class="text-center"><h3> Today's date: @DateTime.Today.ToLongDateString()</h3></td>
         </tr>
        <tr>
            <td>Type of Sub :</td>
            <td>@ViewBag.subName</td>
        </tr>
        <tr>
            <td>Size of Sub :</td>
            <td>@ViewBag.subSize</td>
        </tr>
        <tr>
            <td>Type of Meal Deal : </td>
            <td>@ViewBag.subMeal</td>
        </tr>
        <tr>
            <td>Total Price of Sub : </td>
            <td>@ViewBag.TypeNSizeTotal</td>
        </tr>
       <tr>
           <td>Price of Meal Deal :</td>
           <td>@ViewBag.mealprice</td>
    </tr>
        <tr >
            <td>Cost : </td>
            <td>@ViewBag.subTotal</td>
        </tr>
        <tr>
            <td>Tax : </td>
            <td>@ViewBag.tax</td>
        </tr>
        <tr>
            <td>Total Due :</td>
            <td>@ViewBag.Total</td>
            </tr>
        <tr>
            <th colspan="2" class="text-center">
            @Html.ActionLink("Place another order", "Index", "Home")</th>
        </tr>
        
    </table>